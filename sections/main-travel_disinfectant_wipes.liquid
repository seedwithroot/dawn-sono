<div class="page-travel">
  {% for block in section.blocks %}
    {% case block.type %}
          {% when "hero_section" %}
          <div class="hero-section">
            {% if block.settings.image %}
			<div class="bg_section">
              {% if block.settings.image %}
              <img class="desktop_img" src="{{ block.settings.image | img_url: "master" }}">
              {% endif %}
              {% if block.settings.mb_image %}
              <img class="mobile_img" src="{{ block.settings.mb_image | img_url:" master" }}">
              {% endif %}
            </div>
            {% endif %}
            <div class="hero_des {{ block.settings.vertical_align }} {{ block.settings.horizontal_align }}">
              <div class="hero_des-container">
                {% if block.settings.title %}
                <h1>{{ block.settings.title }}</h1>
                {% endif %}
                {% if block.settings.des %}
                <p>{{ block.settings.des }}</p>
                {% endif %}
                {% if block.settings.btn_title %}
                <a href="{{ block.settings.btn_url }}">{{ block.settings.btn_title }}</a>
                {% endif %}
              </div>
            </div>
          </div>
  	{% endcase %}
  	<style>
      {% if block.settings.image %}
      .hero_des.middle {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 100%;
      }
      .hero_des.top {
        position: absolute;
        top: 0;
        width: 100%;
      }
      .hero_des.bottom {
        position: absolute;
        bottom: 0;
        width: 100%;
      }
      .hero_des.center {
        text-align: center;
      }
      .hero_des.right {
        text-align: right;
      }
      .bg_section img {
        display: block;
        min-height: 450px;
        object-fit: cover;
      }
      {% if block.settings.mb_image %}
      .bg_section img {
        min-height: auto;
      }
      .bg_section img.mobile_img {
        display: none;
      }
      @media(max-width: 767px) {
        .bg_section img.mobile_img {
          display: block;
        }
        .bg_section img.desktop_img {
          display: none;
        }
      }
      {% endif %}
      {% endif %}
	</style>
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Travel Disinfectant Wipes",
    "settings": [
	],
	"blocks": [
		{
			"type": "hero_section",
			"name": "Hero Section",
			"settings": [
				{
					"type": "select",
					"id": "vertical_align",
					"label": "Vertical Position",
                    "default": "middle",
                    "options": [
                      {
                        "value": "top",
                        "label": "Top"
                      },
                      {
                        "value": "middle",
                        "label": "Middle"
                      },
                      {
                        "value": "bottom",
                        "label": "Bottom"
                      }
					]
					
				},
				{
					"type": "select",
					"id": "horizontal_align",
					"label": "Horizontal Position",
                    "default": "center",
                    "options": [
                      {
                        "value": "left",
                        "label": "Left"
                      },
                      {
                        "value": "center",
                        "label": "Center"
                      },
                      {
                        "value": "right",
                        "label": "Right"
                      }
					]
					
				},
				{
					"type": "image_picker",
					"id": "image",
					"label": "Hero Desktop Image"
				},
				{
					"type": "image_picker",
					"id": "mb_image",
					"label": "Hero Mobile Image"
				},
				{
					"type": "text",
					"id": "title",
					"label": "Title"
				},
				{
					"type": "textarea",
					"id": "des",
					"label": "Description"
				},
				{
					"type": "text",
					"id": "btn_title",
					"label": "Button Title"
				},
				{
					"type": "url",
					"id": "btn_url",
					"label": "Button Url"
				}
			]
		}
	]
  }
{% endschema %}

