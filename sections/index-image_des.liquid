				},
				{
					"type": "text",
					"id": "sub_title",
					"label": "Sub Title"
				},
				{
					"type": "color",
					"id": "sub_color",
					"label": "Sub Title Color"
				},
				{
					"type": "text",
					"id": "btn_title1",
					"label": "Button Title"
				},
				{
					"type": "url",
					"id": "btn_url1",
					"label": "Button URL"
				},
				{
					"type": "text",
					"id": "btn_title2",
					"label": "Button Title"
				},
				{
					"type": "url",
					"id": "btn_url2",
					"label": "Button URL"
				},
				{
					"type": "color",
					"id": "btn_color",
					"label": "Button Color"
				},
				{
					"type": "select",
					"id": "des_po",
					"label": "Description Position",
					"default": "middle",
                    "options": [
                      {
                        "value": "top",
                        "label": "Top"
                      },
                      {
                        "value": "middle",
                        "label": "Middle"
                      },
                      {
                        "value": "bottom",
